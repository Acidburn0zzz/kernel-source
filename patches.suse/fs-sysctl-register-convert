+static ctl_table sunrpc_table[] = {
 	{
 		.ctl_name	= CTL_RPCDEBUG,
 		.procname	= "rpc_debug",
@@ -205,14 +207,4 @@ static ctl_table debug_table[] = {
 	{ .ctl_name = 0 }
