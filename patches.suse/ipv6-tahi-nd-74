 				NEIGH_UPDATE_F_IP6REDIRECT|
 				(on_link ? 0 : (NEIGH_UPDATE_F_OVERRIDE_VALID_ISROUTER|
+						NEIGH_UPDATE_F_SETUP_ISROUTER|
 						NEIGH_UPDATE_F_ISROUTER)));
 #ifdef CONFIG_ARPD
 	if (notify > 0 && !neigh->parms->app_probes) {
