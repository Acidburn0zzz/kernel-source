+	case DP_LOG_TARGET_COM1:
+		log_to_com_port(dp, COM1_ADDR);
+		break;
+	case DP_LOG_TARGET_COM2:
+		log_to_com_port(dp, COM2_ADDR);
+		break;
+	case DP_LOG_TARGET_LTT:
+		fmt_log_hdr_raw(dp);
+		log_to_ltt(dp);
+		if (dp->ex_log_len > MIN_ST_SIZE) {
+			fmt_st_hdr_raw(dp);
+			log_st_to_ltt(dp);
+		}
+		break;
+	case DP_LOG_TARGET_EVL:
+		log_to_evl(dp);
