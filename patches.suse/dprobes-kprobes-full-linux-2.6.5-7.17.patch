+		return -1;
+	if (write_st_buffer((unsigned char *)&dp->ex_parm1, sizeof(unsigned long)))
+		return -1;
+	if (write_st_buffer((unsigned char *)&dp->ex_parm2, sizeof(unsigned long)))
