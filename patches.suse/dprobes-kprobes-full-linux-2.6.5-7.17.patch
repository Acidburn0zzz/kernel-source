+static void pushfp_##REG(void) \
+{ \
+	if (dprobes.status & DP_STATUS_FIRSTFPU) \
+		dp_save_fpu(); \
+	if (cpu_has_fxsr) \
+		rpnpush(dprobes.fpu_save_area.fxsave.REG); \
+	else \
+		rpnpush(dprobes.fpu_save_area.fsave.REG); \
+}
