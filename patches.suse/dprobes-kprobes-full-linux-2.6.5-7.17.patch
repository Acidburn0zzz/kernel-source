+	for (i = 0; i < CALL_FRAME_SIZE - 4; i++)
+		dp->call_stack[--dp->call_tos] = 0;
+	/* Save the rpn stack base pointer */
+	dp->call_stack[--dp->call_tos] = dp->rpn_sbp;	
