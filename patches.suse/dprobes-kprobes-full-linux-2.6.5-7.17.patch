+	if (mask & DP_HDR_CS) {
+		*(unsigned short *)tmp = dp->cs;
+		tmp += sizeof(dp->cs);
+	}
+	if (mask & DP_HDR_EIP) {
+		*(unsigned long *)tmp = dp->eip;
+		tmp += sizeof(dp->eip);
+	}
+	if (mask & DP_HDR_SS) {
