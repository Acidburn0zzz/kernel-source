+		case DP_ES:	val = dp->regs->xes; break;
+		case DP_FS:	val = read_fs(); break;
+		case DP_GS:	val = read_gs(); break;
+		case DP_SS:	val = getr_ss(); break;
+		case DP_EAX:	val = dp->regs->eax; break;
