+		gen_ex(EX_CALL_STACK_OVERFLOW, 0, 0);
+		return;
+	}
+	dp->rpn_sbp = dp->call_stack[dp->call_tos++];
+	dp->call_tos += CALL_FRAME_SIZE - 2;
+	/* pop the return address */
+	dp->rpn_ip = dp->rpn_code + dp->call_stack[dp->call_tos++];
