+static inline void wait_for_xmitr_empty(int port)
+{
+	int lsr;
+	unsigned int tmout = 1000000;
+	do {
+               	lsr = inb(port + UART_LSR);
+               	if (--tmout == 0) break;
+       	} while ((lsr & BOTH_EMPTY_TR) != BOTH_EMPTY_TR);
