+static void pushfp_mxcsr(void)
+{
+	if (dprobes.status & DP_STATUS_FIRSTFPU)
+		dp_save_fpu();
+	if (cpu_has_xmm)
+		rpnpush(dprobes.fpu_save_area.fxsave.mxcsr);
+	else
