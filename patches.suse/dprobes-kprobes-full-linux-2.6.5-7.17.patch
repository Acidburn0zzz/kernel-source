+		xmm_8 = *(unsigned long *) ((unsigned char *)
+			(dprobes.fpu_save_area.fxsave.xmm_space) + offset + 8);
+		xmm_12 = *(unsigned long *) ((unsigned char *)
+			(dprobes.fpu_save_area.fxsave.xmm_space) + offset + 12);
+	}
+	rpnpush(xmm_12);
+	rpnpush(xmm_8);
+	rpnpush(xmm_4);
+	rpnpush(xmm_0);
