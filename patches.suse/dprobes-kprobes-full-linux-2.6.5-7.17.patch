+				case DP_PR:	/* pr */
+					break;
+				case DP_PR0:	/* p0 */
+					/* always reads as 1 */
+					val = 1;
+					break;
+				case DP_PR_ROT:	/* pr.rot */
+					val = val >> 16;
+					val = val & 0xffffff;
+					break;
+				default:	/* p1-p63 */
+					val = val >> ((index & 0x00ff) - 1);
+					val = val & 0x01;
+					break;
+			}
+			rpnpush(val);
