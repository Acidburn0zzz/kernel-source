+++ linux-2.6.8.SUSE/fs/nfs/inode.c	2004-08-30 12:47:45.737649879 +0200
@@ -520,6 +520,7 @@ static int nfs_show_options(struct seq_f
 		{ NFS_MOUNT_NOAC, ",noac", "" },
 		{ NFS_MOUNT_NONLM, ",nolock", ",lock" },
 		{ NFS_MOUNT_BROKEN_SUID, ",broken_suid", "" },
+		{ NFS_MOUNT_NOACL, ",noacl", "" },
 		{ 0, NULL, NULL }
 	};
 	struct proc_nfs_info *nfs_infop;
diff -urNp linux-2.6.8/include/linux/nfs_mount.h linux-2.6.8.SUSE/include/linux/nfs_mount.h
--- linux-2.6.8/include/linux/nfs_mount.h	2004-08-14 07:36:12.000000000 +0200
+++ linux-2.6.8.SUSE/include/linux/nfs_mount.h	2004-08-30 12:47:45.737649879 +0200
@@ -58,6 +58,7 @@ struct nfs_mount_data {
 #define NFS_MOUNT_KERBEROS	0x0100	/* 3 */
 #define NFS_MOUNT_NONLM		0x0200	/* 3 */
 #define NFS_MOUNT_BROKEN_SUID	0x0400	/* 4 */
+#define NFS_MOUNT_NOACL		0x0800  /* 4 */
 #define NFS_MOUNT_STRICTLOCK	0x1000	/* reserved for NFSv4 */
 #define NFS_MOUNT_SECFLAVOUR	0x2000	/* 5 */
 #define NFS_MOUNT_FLAGMASK	0xFFFF
