+++ linux.t/fs/reiserfs/file.c	2004-08-12 09:40:05.042547984 -0400
@@ -575,7 +575,7 @@ error_exit:
     if (th->t_trans_id) {
         int err;
         // update any changes we made to blk count
-        reiserfs_update_sd(th, inode);
+        mark_inode_dirty(inode);
         err = journal_end(th, inode->i_sb, JOURNAL_PER_BALANCE_CNT * 3 + 1);
         if (err)
             res = err;
@@ -762,7 +762,8 @@ int reiserfs_submit_file_region_for_writ
 
 	if (th->t_trans_id) {
 	    reiserfs_write_lock(inode->i_sb);
-	    reiserfs_update_sd(th, inode); // And update on-disk metadata
+	    // this sets the proper flags for O_SYNC to trigger a commit
+	    mark_inode_dirty(inode);
 	    reiserfs_write_unlock(inode->i_sb);
 	} else
 	    inode->i_sb->s_op->dirty_inode(inode);
@@ -772,7 +773,7 @@ int reiserfs_submit_file_region_for_writ
