-	    reiserfs_update_sd(th, inode);
+	    mark_inode_dirty(inode);
 	status = journal_end(th, th->t_super, th->t_blocks_allocated);
         if (status)
             retval = status;
@@ -1214,7 +1215,7 @@ ssize_t reiserfs_file_write( struct file
