+
 	struct class_attribute		* class_attrs;
 	struct class_device_attribute	* class_dev_attrs;
 	struct device_attribute		* dev_attrs;
@@ -285,7 +287,6 @@ extern struct class_device *class_device
 					__attribute__((format(printf,5,6)));
