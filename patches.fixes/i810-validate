 		return -EINVAL;
 	}
 
+	if ((unsigned long)mc.idx >= dma->buf_count)
+		return -EINVAL;
+
 	i810_dma_dispatch_mc(dev, dma->buflist[mc.idx], mc.used,
 		mc.last_render );
 
