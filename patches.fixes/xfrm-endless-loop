+	int loops = 0;
+
 restart:
+	if (unlikely(++loops > 10)) {
+		printk(KERN_NOTICE "xfrm_lookup bailing out after %d loops\n", loops);
+		dump_stack();
+		err = -EHOSTUNREACH;
+		goto error_nopol;
+	}
+
 	genid = atomic_read(&flow_cache_genid);
 	policy = NULL;
 	if (sk && sk->sk_policy[1])
