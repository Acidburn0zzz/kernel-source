#! /bin/bash

differences="$(
    diff -U0 <(sort "$1" | grep -v CONFIG_RELEASE) \
	     <(sort "$2" | grep -v CONFIG_RELEASE) \
    | grep '^[-+][^-+]'
)" || true
if [ -n "$differences" ]; then
    echo
    echo "Changes after running \`make oldconfig':"
    echo "$differences"
    echo
    if echo "$differences" | grep -q '^+' ; then
	exit 1
    fi
fi
