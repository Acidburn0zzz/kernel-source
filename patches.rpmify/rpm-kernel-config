+++ b/init/Kconfig	2007-08-27 14:01:19.000000000 -0400
@@ -95,6 +95,10 @@ config LOCALVERSION_AUTO
 
 	  which is done within the script "scripts/setlocalversion".)
 
+config SUSE_KERNEL
+	bool
+	default y
